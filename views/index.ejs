

<section class="all-comments container">
  <h1>Son Yorumlar</h1>
  <br><br>

  <% data.forEach(post => { %>
    <div class="comment-item">
      <p class="comment-text"><%= post.content %></p>
      <div class="comment-meta">
        <span class="comment-author"><%= post.author.userName %></span> • 
        <a href="/post/<%= post._id %>"><%= post.title %></a> • 
        <span class="comment-date"><%= post.createdAt.toDateString() %></span>
      </div>
    </div> 
  <% }) %>

  <br><br>
  <div class="pagination">
  <% if(hasPrevPage) { %>
    <a href="/?page=<%= current - 1 %>">Previous</a>
  <% } else { %>
    <span class="disabled">Previous</span>
  <% } %>

  <span>Sayfa <%= current %> / <%= totalPages %></span>

  <% if(nextPage) { %>
    <a href="/?page=<%= nextPage %>">Next</a>
  <% } else { %>
    <span class="disabled">Next</span>
  <% } %>
  </div>


</section>


